{
  "routes": [
    {
      "method": "GET",
      "path": "/blogs",
      "handler": "blogs.find",
      "config": {
        "policies": ["blogs.formatMany"]
      }
    },
    {
      "method": "GET",
      "path": "/blogs/count",
      "handler": "blogs.count",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/blogs/:slug/slug",
      "handler": "blogs.findOneSlug",
      "config": {
        "policies": ["blogs.formatOne"]
      }
    },
    {
      "method": "GET",
      "path": "/blogs/:id",
      "handler": "blogs.findOne",
      "config": {
        "policies": ["blogs.formatOne"]
      }
    },
    {
      "method": "POST",
      "path": "/blogs",
      "handler": "blogs.create",
      "config": {
        "policies": ["blogs.formatOne"]
      }
    },
    {
      "method": "PUT",
      "path": "/blogs/:id",
      "handler": "blogs.update",
      "config": {
        "policies": ["blogs.formatOne"]
      }
    },
    {
      "method": "DELETE",
      "path": "/blogs/:id",
      "handler": "blogs.delete",
      "config": {
        "policies": ["blogs.formatOne"]
      }
    }
  ]
}
